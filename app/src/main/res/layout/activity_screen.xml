<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:background="@color/backgroundBaseBlueSemiLight"
    tools:context="pl.noritoshi_scarlett.pathflytha.activities.ScreenActivity">

    <ImageView
        android:id="@+id/startImageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:src="@drawable/icon_app_logo_96" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/startImageLogo"
        android:layout_alignEnd="@id/startImageLogo"
        android:layout_below="@id/startImageLogo"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:visibility="visible" />

</RelativeLayout>
